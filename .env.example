APP_NAME="Ecommerce Backend"
APP_ENV=local
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

FRONTEND_URL=http://localhost:3000
CMS_URL=http://localhost:3001

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ecommerce
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email Configuration (for password reset, notifications)
# Use 'log' for development, 'smtp' for production
# Gmail SMTP: smtp.gmail.com:587 (requires app password)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# API Configuration
API_VERSION=v1
API_RATE_LIMIT_DEFAULT=60
API_RATE_LIMIT_AUTH=5
API_RATE_LIMIT_CHECKOUT=10
API_CACHE_ENABLED=true
API_REQUIRE_HTTPS=false

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:3000,::1

# Auth token/cookie configuration
AUTH_REFRESH_COOKIE_NAME=refresh_token
AUTH_REFRESH_COOKIE_PATH=/api/v1/auth
AUTH_REFRESH_COOKIE_DOMAIN=
AUTH_REFRESH_COOKIE_SECURE=false
AUTH_REFRESH_COOKIE_SAME_SITE=strict
AUTH_REFRESH_TOKEN_TTL_MINUTES=10080

# Mercado Pago Payment Gateway
# Get credentials from: https://www.mercadopago.com/developers/panel/app
# Test mode: TEST-xxx, Production: APP_USR-xxx
MERCADOPAGO_PUBLIC_KEY=your-public-key-here
MERCADOPAGO_ACCESS_TOKEN=your-access-token-here
# Generate webhook secret: openssl rand -base64 32
MERCADOPAGO_WEBHOOK_SECRET=
# TLS pinning (recommended in production):
# Format: sha256//BASE64_ENCODED_SPKI_HASH
# Leave disabled in local/dev. In production, enable and set pinned key.
MERCADOPAGO_TLS_PINNING_ENABLED=false
MERCADOPAGO_TLS_PINNED_PUBLIC_KEY=
MERCADOPAGO_SUCCESS_URL="${FRONTEND_URL}/checkout/success"
MERCADOPAGO_FAILURE_URL="${FRONTEND_URL}/checkout/failure"
MERCADOPAGO_PENDING_URL="${FRONTEND_URL}/checkout/pending"
MERCADOPAGO_NOTIFICATION_URL="${APP_URL}/api/v1/webhooks/mercadopago"

# Andreani Shipping Provider
# Request access at: https://developers.andreani.com/
ANDREANI_USERNAME=
ANDREANI_PASSWORD=
ANDREANI_API_URL=https://apis.andreani.com/v2
ANDREANI_CONTRACT_NUMBER=
ANDREANI_ORIGIN_POSTAL_CODE=1425  # Your warehouse postal code
ANDREANI_SENDER_DOCUMENT=  # CUIT of sender
# Generate webhook secret: openssl rand -base64 32
ANDREANI_WEBHOOK_SECRET=

# Tax Configuration (Argentina IVA)
# Managed via Settings model in database
# tax_enabled: true/false
# tax_rate: 21 (for 21% IVA)
# tax_included_in_prices: false (tax calculated separately)

# Laravel Reverb (WebSockets)
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"
